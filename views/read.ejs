<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-gray-200 flex flex-col items-center min-h-screen m-0 p-0">

  <!-- Header -->
  <header class="w-full p-4 bg-gray-800 shadow-md">
    <a class="text-blue-400 hover:underline text-lg" href="/">Back to Home</a>
  </header>

  <!-- Main Title -->
  <h1 class="text-4xl font-extrabold mt-8 mb-6 text-center">All Users</h1>

  <!-- Profile Cards Container -->
  <div class="flex flex-wrap gap-6 justify-center">
    <% if (Users.length === 0) { %>
      <p class="text-gray-400 text-lg">No posts yet.</p>
    <% } else { %>
      <% Users.forEach(function(user) { %>
        <div class="bg-gray-800 border border-gray-700 rounded-lg overflow-hidden shadow-lg transform transition-transform hover:scale-105 max-w-xs w-60">
          <div class="w-full h-48 bg-gray-600">
            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="Profile picture of <%= user.Name %>">
          </div>
          <div class="p-4 text-center">
            <h3 class="text-xl font-semibold mb-5 text-white"><%= user.Name %></h3>
            <p class="text-gray-400 mb-4"><%= user.email %></p>
            <div class="flex justify-around">
              <a class="text-blue-400 hover:underline text-sm" href="/edit/<%= user._id %>">Edit User</a>
              <a class="text-blue-400 hover:underline text-sm" href="/delete/<%= user._id %>">Delete User</a>
            </div>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>

</body>
</html>
